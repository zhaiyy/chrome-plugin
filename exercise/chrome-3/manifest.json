{
  "manifest_version": 2,
  "name": "事件脚本",
  "version": "1.0",
  "description": "我的第三个Chrome扩展",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "事件脚本"
  },
  "background": {
  "scripts": ["eventPage.js"]//自动创建一个包含所有指定脚本的页面
  // "persistent": false //定义了常驻后台的方式——当其值为true时，表示扩展将一直在后台运行，无论其是否正在工作；当其值为false时，表示扩展在后台按需运行
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}
